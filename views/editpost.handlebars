<article>
  <a href="/dashboard" class="is-pulled-right"> Dashboard</a>
  <h2 class="title mt-5">Edit Post</h2><hr>
  <form class="edit-post-form">
    <div>
        <label for="post-title">Title:</label>
      <input class="input" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
        <label for="post-text">Text:</label>
      <input class="textarea" name="post-text" type="text" value="{{post.post_text}}" />
    </div>
    <div class="is-pulled-right">
       Created on: {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">Save</button>
    <button type="button" class="button is-danger delete-post-btn">delete post</button>
  </form>
</article>

{{> comments post.comments}}<div class="text-center">
  <h2>{{post.title}}</h2>
  <p>{{post.content}}</p>
  <p>Created by {{post.user.name}} on {{date_created}}</p>
  <p>
    <button class="btn btn-primary">Create Post</button>
  </p>
</div>

<script src="./js/createpost.js"></script>
<script src="./js/comment.js"></script>